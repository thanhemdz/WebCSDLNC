@model IEnumerable<BuiTanThanh_2280602928_W3.Models.OrderItem>
@if (Model == null || !Model.Any())
{
    <div class="text-center">Không có sản phẩm nào trong hóa đơn này.</div>
}
else
{
    <table class="table table-sm table-bordered mb-0">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0")</td>
                <td>@(item.Quantity * item.UnitPrice).ToString("N0")</td>
            </tr>
        }
        </tbody>
    </table>
}
