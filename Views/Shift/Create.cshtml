@model BuiTanThanh_2280602928_W3.Models.Shift
@using BuiTanThanh_2280602928_W3.Models
@{
    ViewData["Title"] = "Thêm ca làm";
    var allStaff = ViewBag.AllStaff as List<BuiTanThanh_2280602928_W3.Models.ApplicationUser>;
}
<h2>Thêm ca làm</h2>
<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="StaffId">Nhân viên</label>
        <select asp-for="StaffId" class="form-control" asp-items="@(new SelectList(allStaff, "Id", "Name"))">
            <option value="">-- Chọn nhân viên --</option>
        </select>
        <span asp-validation-for="StaffId" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Date">Ngày làm việc</label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ShiftType">Ca làm</label>
        <select asp-for="ShiftType" class="form-control">
            <option value="">-- Chọn ca --</option>
            <option value="Morning">Sáng (7h-12h)</option>
            <option value="Afternoon">Trưa (12h-17h)</option>
            <option value="Evening">Tối (17h-22h)</option>
        </select>
        <span asp-validation-for="ShiftType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
